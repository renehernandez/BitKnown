{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{ post_class }}">
    <header class="post-header">
        <h2 class="post-title"><a class="non-highlighted" href="{{url}}">{{ title }}</a></h2>
    </header>
    <section class="post-excerpt">
        <p>{{ excerpt words="26" }} <a class="non-highlighted read-more" href="{{ url }}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
        {{#if primary_author.profile_image }}<img class="author-thumb" src="{{ primary_author.profile_image }}" alt="{{ primary_author.name }}" nopin="nopin" />{{/if}}
        <span class="author-index">{{ primary_author }}</span>
        {{> "tags_loop" }}
        <time class="post-date" datetime="{{ date format='YYYY-MM-DD'}}">{{ date format="DD MMMM YYYY" }}</time>
        <span class="reading-time">{{ reading_time }}</span>
    </footer>
</article>
{{/foreach}}

