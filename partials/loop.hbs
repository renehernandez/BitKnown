{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{ post_class }}">
    <header class="post-header row">
        <div class="col">
            <h2 class="post-title"><a class="non-highlighted" href="{{url}}">{{ title }}</a></h2>
        </div>
    </header>
    <section class="post-excerpt row">
        <div class="col">
            <p>{{ excerpt words="26" }} <a class="non-highlighted read-more" href="{{ url }}">&raquo;</a></p>
        </div>
    </section>
    <footer class="post-meta row justify-content-start">
        <div class="col-auto border-right border-secondary">
            {{#if primary_author.profile_image }}
                <img class="author-thumb" src="{{ primary_author.profile_image }}" 
                    alt="{{ primary_author.name }}" nopin="nopin" />
                <span class="author-index d-none d-xl-inline">{{ primary_author.name }}</span>
            {{else}}
                <span class="author-index">{{ primary_author.name }}</span>
            {{/if}}
        </div>
        <div class="col-auto border-right border-secondary">
            {{> "tags_loop" }}
        </div>
        <div class="col-auto d-none d-md-inline border-right border-secondary">
            <time class="post-date" 
                datetime="{{ date format='YYYY-MM-DD'}}">
                {{ date format="DD MMMM YYYY" }}</time>
        </div>
        <div class="col-auto">
            <span class="reading-time">{{ reading_time }}</span>
        </div>
    </footer>
</article>
{{/foreach}}

